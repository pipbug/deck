[Unit]
Description=Fast Battery Monitor Timer
Requires=battery-oneshot.service

[Timer]
# Start 10 seconds after boot
OnBootSec=10sec

# Run every 2 seconds
OnUnitActiveSec=2sec

# High accuracy for consistent timing
AccuracySec=100ms

# Prevent missed runs if system is busy
Persistent=true

[Install]
WantedBy=timers.target
